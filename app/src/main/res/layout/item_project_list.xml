<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/item_project_list_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/colorPrimaryDark"
        app:mrl_rippleOverlay="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#00ACEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/item_project_list_Img"
                android:layout_width="@dimen/projectlist_item_icon_size"
                android:layout_height="@dimen/projectlist_item_icon_size"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="2dp"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/tvProjectTitle_ProjectList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|center"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="@dimen/right_item_arrow"
                android:layout_height="@dimen/right_item_arrow"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/default_padding"
                android:src="@drawable/ic_right_arrows" />
        </LinearLayout>


    </com.balysv.materialripple.MaterialRippleLayout>


</LinearLayout>