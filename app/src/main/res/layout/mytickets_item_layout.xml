<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/edittxt_bg"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.80"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtVwDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:paddingLeft="5dp"
                android:textSize="@dimen/_10sdp"
                android:text="13/7/2017"
                android:textColor="@color/transperant_black" />

            <TextView
                android:id="@+id/txtVwNoData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="#14"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/transperant_black" />

            <TextView
                android:id="@+id/txtVwSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:textSize="@dimen/_10sdp"
                android:background  ="@color/transparent"
                android:text="@string/support"
                android:textColor="@color/transperant_black" />

        </LinearLayout>

        <Button
            android:id="@+id/btnViewReply"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="0.2"
            android:background="@drawable/pay_btn"
            android:text="@string/view_reply"
            android:textAllCaps="false"
            android:textColor="@color/transperant_black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>