<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/backbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/activity_building_list_back"
            android:layout_width="@dimen/backbutton_height_width"
            android:layout_height="@dimen/backbutton_height_width"
            android:background="@drawable/back_button_selector" />
    </RelativeLayout>


    <ListView
        android:id="@+id/activity_building_list_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backbutton"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:divider="@null"/>
</RelativeLayout>