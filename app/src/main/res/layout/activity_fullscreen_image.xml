<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBack_FullscreenActivity"
                android:layout_width="@dimen/backbutton_height_width"
                android:layout_height="@dimen/backbutton_height_width"
                android:layout_margin="10dp"
                android:background="@drawable/back_button_selector" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ivShare_FulscreenActivity"
            android:layout_width="@dimen/backbutton_height_width"
            android:layout_height="@dimen/backbutton_height_width"
            android:layout_gravity="center|right"
            android:layout_margin="10dp"
            android:background="@drawable/ic_sshare"
            android:gravity="center|right" />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_FullScreenImageActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
