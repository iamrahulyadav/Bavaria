<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_app_bg">

    <LinearLayout
        android:id="@+id/linearlyout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.bavaria.group.Util.TouchImageView
            android:id="@+id/ivTouchImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/default_img" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack_MultitouchActivity"
            android:layout_width="@dimen/backbutton_height_width"
            android:layout_height="@dimen/backbutton_height_width"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/back_button_selector" />

        <ImageView
            android:id="@+id/ivShare_MultitouchActivity"
            android:layout_width="@dimen/backbutton_height_width"
            android:layout_height="@dimen/backbutton_height_width"
            android:layout_gravity="center|right"
            android:layout_margin="10dp"
            android:background="@drawable/ic_sshare"
            android:gravity="center|right" />


    </FrameLayout>

</RelativeLayout>